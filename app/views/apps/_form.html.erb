<%= form_with(model: app, class: "contents") do |form| %>
  <% if app.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(app.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul class="list-disc ml-6">
        <% app.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name,
       { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": app.errors[:name].none?, "border-red-400 focus:outline-red-600": app.errors[:name].any?}], autofocus: true }%>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": app.errors[:description].none?, "border-red-400 focus:outline-red-600": app.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": app.errors[:url].none?, "border-red-400 focus:outline-red-600": app.errors[:url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :global_login %>
    <%= form.text_field :global_login,
         { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": app.errors[:global_login].none?, "border-red-400 focus:outline-red-600": app.errors[:global_login].any?}] } %>
  </div>

  <div class="my-5">
    <%= form.label :global_password %>
    <%= form.password_field :global_password, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": app.errors[:global_password].none?, "border-red-400 focus:outline-red-600": app.errors[:global_password].any?}] %>Leave blank if unchanged.
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
